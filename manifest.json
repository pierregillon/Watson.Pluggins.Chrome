{
    "name": "Watson",
    "version": "1.0",
    "description": "Watson chrome extension is a collaborative web media fact checker.",
    "permissions": [
        "activeTab",
        "declarativeContent",
        "storage"
    ],
    "background": {
        "scripts": [
            "./extension/HttpClient.js",
            "./extension/FactRepository.js",
            "./background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_title": "Watson",
        "default_popup": "./extension/popup.html"
    },
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [],
            "js": [
                "./browser/js/Fact.js",
                "./browser/js/xpath.js",
                "./browser/js/utils.js",
                "./browser/js/init.js"
            ]
        }
    ]
}