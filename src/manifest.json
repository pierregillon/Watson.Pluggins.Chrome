{
    "name": "Watson",
    "version": "1.0",
    "description": "Watson chrome extension is a collaborative web media fact checker.",
    "icons": {
        "16": "extension/images/icon-detective16.png",
        "48": "extension/images/icon-detective48.png",
       "128": "extension/images/icon-detective128.png" 
    },
    "permissions": [
        "activeTab",
        "tabs",
        "declarativeContent",
        "storage"
    ],
    "background": {
        "scripts": [
            "./domain/HttpClient.js",
            "./domain/RenewTokenHttpClient.js",
            "./domain/FactRepository.js",
            "./domain/AuthenticationService.js",
            "./background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_title": "Watson",
        "default_popup": "./extension/popup.html"
    },
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "./browser/css/global.css"
            ],
            "js": [
                "./browser/js/xpath.js",
                "./domain/stringExtensions.js",
                "./browser/js/Fact.js",
                "./browser/js/init.js"
            ]
        }
    ],
    "web_accessible_resources": [
        "extension/images/*.png"
    ]
}